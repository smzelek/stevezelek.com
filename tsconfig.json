{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "dom"
        ],
        "removeComments": true,
        "target": "ES6",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "~core": [
                "./core"
            ],
            "~backend*": [
                "./backend/src*"
            ],
            "~frontend*": [
                "./frontend/src*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "./**/node_modules/**/*"
    ]
}